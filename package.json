{
  "name": "RTLify_GPT",
  "description": "A browser extension that supports RTL languages in GPT web applications.",
  "private": true,
  "version": "3.0.0-beta.1",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "e2e": "playwright test",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.14.1",
    "typescript": "^5.8.3",
    "wxt": "^0.20.0"
  }
}
